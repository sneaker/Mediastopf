public class Hallo {

	public static void main (String args[]) {
		// Überflüssiger Comment.
		// immer klammern setzten. den code da unten kann man fast nicht richtig lesen!
		System.out.println("Hallo Wält");

		while(true) {
			this = this;
			if (this.isempty()) {
				System.out.println("whatever");
				break;
			} else {
				continue; // :-)
			}
		}

		person thomas = new person(PERSON.SMOKER)

		thomas.go_smoke()

		while(thomas.issmoking()) {
			sleep 1;
		}
	}
}
